@using RunGroupWebApp.Data.Enum
@model RunGroupWebApp.ViewModels.EditClubViewModel

<form method="post" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" id="AppUserId" name="AppUserId" asp-for="AppUserId" />
    <input type="hidden" value="AddressId" id="AddressId" />
    <div class="form-group" style="margin-bottom: 1rem">
        <label asp-for="Title">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter title">
        <span asp-validation-for="Title" class="text-danger" />
    </div>

    <div class="form-group" style="margin-bottom: 1rem">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter description">
        <span asp-validation-for="Description" class="text-danger" />
    </div>

    <div class="form-group" style="margin-bottom: 1rem">
        <label asp-for="ClubCategory" style="margin-right: 0.5rem">Category</label>
        <select asp-for="ClubCategory" asp-items="@Html.GetEnumSelectList<ClubCategory>()" class="form-control">
            <option>Select</option>
        </select>
        <span asp-validation-for="ClubCategory" class="text-danger" />
    </div>

    <div class="form-group" style="margin-bottom: 1rem">
        <label asp-for="Address.State">State</label>
        <input asp-for="Address.State" class="form-control" placeholder="Enter state">
        <span asp-validation-for="Address.State" class="text-danger" />
    </div>

    <div class="form-group" style="margin-bottom: 1rem">
        <label asp-for="Address.City">City</label>
        <input asp-for="Address.City" class="form-control" placeholder="Enter city">
        <span asp-validation-for="Address.City" class="text-danger" />
    </div>

    <div class="form-group" style="margin-bottom: 1rem">
        <label asp-for="Address.Street">Street</label>
        <input asp-for="Address.Street" class="form-control" placeholder="Enter street">
        <span asp-validation-for="Address.Street" class="text-danger" />
    </div>

    <div class="form-group" style="margin-bottom: 1rem">
        <label asp-for="Image">Image</label>
        <input asp-for="Image" type="file" class="form-control" placeholder="Enter image">
        <span asp-validation-for="Image" class="text-danger" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>